{% extends "layouts/base.twig" %}

{% block content %}
	<section id="News-Section" class="gradient content">
		<div class="inner-content">
			{% for post in posts %}
				<div class="accordion" role="tablist" aria-multiselectable="true">
					<div class="panel panel-default">
						<!-- PANEL STARTS HERE -->
						{% if loop.index0 == 0 %}
							{% set expanded = true %}
						  {% set class = ' in' %}
						{% else %}
							{% set expanded = false %}
							{% set class = '' %}
						{% endif %}
						<div class="panel-heading" role="tab" data-toggle="Newscollapse" data-parent="#accordionNews" href="#News{{loop.index}}" aria-expanded="{{expanded}}" aria-controls="collapse{{loop.index}}">
							<div class="panel-heading-date">
								<span>{{post.date|date('m/d/Y')}}</span>
							</div>
							<div class="accordion-panel-title panel-news">
								<article>
									{{post.title}}
								</article>
							</div>
							<!-- PANEL HEADING ENDS HERE -->
							{% if loop.index0 == 0 %}
							<div id="News{{loop.index}}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading{{loop.index}}">
							{% else %}
							<div id="News{{loop.index}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading{{loop.index}}">
							{% endif %}
								{% if post.video %}
									<div class="video-wrapper">
										<video loop poster="{{post.thumbnail.src()}}">
											<source src="{{post.get_field('video').url}}"
												type="{{post.get_field('video').mime_type}}">
										</video>
										<div class="playpause"></div>
									</div>
								{% else %}
									<img src="{{post.thumbnail.src()}}"
										alt="{{post.thumbnail.caption}}" />
								{% endif %}
								{{post.content}}
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
			<div id="nextpage"
				data-url=data-next="{{pagination.next.link}}"></div>
		</div>
	</section>
{% endblock %}
